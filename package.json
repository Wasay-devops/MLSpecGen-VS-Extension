{
  "name": "ml-contract-extension",
  "displayName": "ML Contract Violation Detector",
  "description": "Detect ML API contract violations and generate PyContracts using RAG and GPT-4o",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Machine Learning",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ml-contract.openDashboard",
        "title": "Open ML Contract Dashboard",
        "category": "ML Contract"
      },
      {
        "command": "ml-contract.detectViolations",
        "title": "Detect Contract Violations",
        "category": "ML Contract"
      },
      {
        "command": "ml-contract.generateContracts",
        "title": "Generate PyContracts",
        "category": "ML Contract"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .py",
          "command": "ml-contract.openDashboard",
          "group": "ml-contract"
        }
      ],
      "commandPalette": [
        {
          "command": "ml-contract.openDashboard"
        },
        {
          "command": "ml-contract.detectViolations"
        },
        {
          "command": "ml-contract.generateContracts"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run esbuild && npm run lint",
    "lint": "eslint src --ext js",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^4.0.0",
    "dotenv": "^16.0.0"
  }
}
