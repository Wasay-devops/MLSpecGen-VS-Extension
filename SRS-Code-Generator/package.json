{
  "name": "srs-code-generator",
  "displayName": "SRS Code Generator",
  "description": "Generate code from Software Requirements Specification (SRS) documents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:srs-code-generator.uploadSRS",
    "onCommand:srs-code-generator.generateCode",
    "onCommand:srs-code-generator.openDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "srs-code-generator.uploadSRS",
        "title": "Upload SRS Document",
        "category": "SRS Code Generator"
      },
      {
        "command": "srs-code-generator.generateCode",
        "title": "Generate Code from Functionality",
        "category": "SRS Code Generator"
      },
      {
        "command": "srs-code-generator.openDashboard",
        "title": "Open SRS Dashboard",
        "category": "SRS Code Generator"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .pdf",
          "command": "srs-code-generator.uploadSRS",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "pdf-parse": "^1.1.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "axios": "^1.6.0"
  }
}
